<!-- This is where the carousel will appear -->


<div class="well1">
    <h3 id="data-title"><strong> LOCATION NAME: 
<span id={{this.locationTitle}}>  </span></strong></h3>
    <h4 id="data-address"><strong>ADDRESS: <span id={{this.googleId}} {{this.street}} {{this.city}} {{this.state}} {{this.zip}}> </span></strong> </h4>
</div>

<div class="row">
    <div class="col-sm-12">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
            <!-- Indicators -->
            <ol class="carousel-indicators">

            {{#each locations}}
                
                <li data-target="#myCarousel" data-slide-to="{{@index}}" 
                {{#if @first}}class="active"{{/if}}></li>
       
            {{/each}}
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                 
                {{#each locations}}
                    <div class="item {{#if @first}} active{{/if}}">
                        <img id="cr{{@index}}" src="{{this.locationImgUrl}}" alt="Image" data-location-id={{this.locationGoogleId}}>
                        {{this.locationTitle}}
                    </div>
                {{/each}}

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-4">
        <div class="well1">
            <h4 id={{this.comment}} class="commentId"> Comment: </h4>

        </div>
    </div>
    <div class="col-sm-4">
        <div class="well1">
            <h4 id={{this.difficulty}} class="difficultyId"> Difficulty: </h4>

        </div>
    </div>
    <div class="col-sm-4">
        <div class="well1">
            <h4 id={{this.rental}} class="rentalId"> Rental: </h4>
        </div>
    </div>
</div>