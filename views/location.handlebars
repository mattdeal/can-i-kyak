    <div class="row-location-image col-sm-3">
        <img src="{{imageUrl}}" alt="Image">
    </div>

    <div class="row-info col-sm-9">
        <ul>
            <li><strong> Location Name: {{name}}</strong></li>
            <li><strong> Location Address: {{street}} {{city}} {{state}} {{zip}}</strong></li>
            <li><strong> Comments: todo</strong></li>
            <li><strong> Difficulty Level: todo</strong></li>
            <li><strong> Rental: todo</strong></li>
        </ul>
    </div>
</div>

<div class="panel-body">
    {{#each comments}}
        {{location}} {{googleId}} {{name}}

    <form class="action="/add" method="POST">
        <h3> Give us your Feedback!</h3>
        <div class="form-group">
            <label for="name"> PERSON NAME: </label>
            <input type="text" class="form-control" required placeholder="Name of a person" id={{authorId}} {{googleId}} required>
        </div>

        <div class="form-group">
            <label for="comments"> COMMENTS: </label>
            <input type="text" class="form-control" required placeholder="Comments on the location" id={{comment}}{{googleId}} class="commentId" required>
        </div>

        <div class="form-group">
            <label for=""> RATING: </label>
            <select id="dropDownList" type="text" class="form-control" class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"
                id={{rental}} {{googleId}} required>Select an Option<span></span>
                    <option value="1">Best place to visit!</option>
                    <option value="2">Good place!</option>
                    <option value="3">Average</option>
                    <option value="4">Not bad to spend time!</option>
                    <option value="5">Don't waste your time!</option>
            </select>
        </div>

        <div class="form-group">
            <button type="submit" id="submit" class="btn btn-primary btn-lg"> Submit </button>
            <button type="clear" id="clear" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-trash"></span> Clear </button>
        </div>
    </form>
    {{/each}}
</div>